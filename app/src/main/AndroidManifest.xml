<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.mohanad.com.miwok1">

    <!--to able to play music-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NumbersActivity"
            android:label="@string/numbers_category_name"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".FamilyActivity"
            android:label="@string/family_category_name"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".ColorsActivity"
            android:label="@string/colors_category_name"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".PhrasesActivity"
            android:label="@string/phrases_category_name"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>